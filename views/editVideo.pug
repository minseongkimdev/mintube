extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="변경할 Title", name="title", value=video.title)
            textarea(name="description", placeholder="변경할 Description")=video.description
            input(type="submit", value= "Update Video")
        a.form-container__link(href=routes.deleteVideo(video.id))
            button.delete Delete Video

